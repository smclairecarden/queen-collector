<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/queens/index.css" /> 
<link 
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
  crossorigin="anonymous"
>
<%- include('../partials/nav') %> 

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
  <h1><%= isSelf ? "Your" : `${profile.name}'s` %> Favorites!</h1>
  <% if(profile.queens) { %> 
  <% profile.queens.forEach(queen => {  %>
    <div class="col">
      <a class="text-decoration-none" href="/queens/<%= queen._id %>">
        <div class="card mb-4 shadow-sm">
          <%= queen.dragName %>
        </div>
        <div class="card-body">
          <p><%= queen.city %></p>
          <p><%= queen.season %></p>
          <p><%= queen.episodeEliminated %></p>
        </div>
      </a>
  <% }) %> 
  <% } else { %>
    <h2>
      <%= isSelf ? "You don't" : `${profile.name} doesn't` %> have any Queens favorited yet!
    </h2> 
  <% } %> 
</main>

<%- include('../partials/footer') %> 