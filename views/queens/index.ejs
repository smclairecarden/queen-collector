<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/queens/index.css" /> 
<%- include('../partials/nav') %> 



  <table>
    <thead>
      <tr>
        <th>Drag Name</th>
        <th>City</th>
        <th>Season</th>
        <th>Episode Eliminated</th>
      </tr>
    </thead>
    <tbody>
      <% queens.forEach(queen => { %> 
        <tr>
          <td><%= queen.dragName %></td>
          <td><%= queen.city %></td>
          <td><%= queen.season %></td>
          <td><%= queen.episodeEliminated %></td>
          <% if(!user) { %> 
          <td><a href="/queens/<%= queen._id %>" id="details" hidden>DETAILS</a></td>
          <% } else { %>
            <td><a href="/queens/<%= queen._id %>" id="details">DETAILS</a></td>
          <% } %>  
          <td>
            <% if (user && user.profile && user.profile._id.equals(queen.owner)) { %>
              <form 
                action="/queens/<%= queen._id %>?_method=DELETE" 
                method="POST">
                <button>X</button>
              </form>
            <% } %> 
          </td>
        </tr>
      <% }) %> 
    </tbody>
  </table>


<%- include('../partials/footer') %> 